        $(function () {
            Date.prototype.format = function (format) {
                var o = {
                    "M+": this.getMonth() + 1,//月份
                    "d+": this.getDate(),//日期
                    "h+": this.getHours(),//小时
                    "m+": this.getMinutes()//分钟
                }
                if (/(y+)/.test(format)) {
                    format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
                }
                for (var k in o) {
                    if (new RegExp("(" + k + ")").test(format))
                        format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
                }
                return format;
            }
            function DateTimeFormatter(value) {
                if (value == undefined) {
                    return "";
                }
                //将json转换为js时间格式
                value = value.substr(1, value.length - 2);
                var obj = eval('(' + "{Date: new " + value + "}" + ')');
                var dateVlaue = obj["Date"];
                if (dateVlaue.getFullYear() < 1900) {
                    return "";
                }
                return dateVlaue.format("yyyy-MM-dd");
            }

            $('#dg').datagrid({
                url: '/Equipment/QueryInfo',
                fitColumns: true,
                columns: [[
                     { field: 'ck', checkbox: true },
                    { field: 'EName', title: '设备名称', width: 100, align: 'center' },
                    { field: 'TypeName', title: '设备类型', width: 100, align: 'center' },
                    {
                        field: 'EState', title: '设备状态', width: 100, align: 'center',
                        formatter: function (value, row, index) {
                            if (value == 3) {
                                return "报废";
                            } else if (value == 2) {
                                return "维修";
                            }
                            else {
                                return "空闲";
                            }
                        }
                    },
                    { field: 'EBrand', title: '设备品牌', width: 100, align: 'center' },
                    { field: 'EMFD', title: '购买时间', width: 100, formatter: DateTimeFormatter, align: 'center' },
                  { field: 'EModel', title: '设备型号', width: 100, align: 'center' },
                   { field: 'ENum', title: '序列号', width: 100, align: 'center' },
                ]],
                toolbar: [{
                    text: '添加设备',
                    iconCls: 'icon-add',
                    handler: function () {
                        $("#btnOK").css('display', 'none');
                        $("#btnCel").css('display', 'none');
                        $('#dlg').dialog('open').dialog({
                            title: 'My Dialog',
                            closed: false,
                            cache: false,
                            modal: true,
                            buttons: [{
                                text: '保存',
                                handler: function () {
                                    $.ajax({
                                        url: "/Equipment/AddE?Brand=" + $("#EBrand").val(),
                                        data: $("#ff").serialize(),
                                        success: function (data) {
                                            if (data == "Y") {
                                                alert("添加成功");
                                                $("#dlg").dialog('close');
                                                $("#dg").datagrid('reload');
                                                $("#ff").form('clear');
                                            }
                                        }
                                    });
                                }
                            }, {
                                text: '关闭',
                                handler: function () {
                                    $("#dlg").dialog('close');
                                    $("#ff").form('clear');
                                }
                            }]
                        });
                        URL = "/Equipment/AddE";
                    }
                }, '-', {
                    text: '更新设备',
                    iconCls: 'icon-edit',
                    handler: function () {
                        var row = $("#dg").datagrid('getSelected');
                        if (row) {
                            $("#ff").form('load', row);
                            $("#EDType").combobox('setText', row.TypeName);
                            $("#btnOK").css('display', 'none');
                            $("#btnCel").css('display', 'none');
                            $("#dlg").dialog('open').dialog({
                                title: 'My Dialog',
                                closed: false,
                                cache: false,
                                modal: true,
                                buttons: [{
                                    text: '保存',
                                    handler: function () {
                                        $.ajax({
                                            url: "/Equipment/UpdateE?id=" + row.EID,
                                            data: $("#ff").serialize(),
                                            success: function (data) {
                                                if (data == "Y") {
                                                    alert("修改成功");
                                                    $("#dlg").dialog('close');
                                                    $("#dg").datagrid('reload');
                                                    $("#ff").form('clear');
                                                }
                                            }
                                        });
                                    }
                                }, {
                                    text: '关闭',
                                    handler: function () {
                                        $("#dlg").dialog('close');
                                        $("#ff").form('clear');
                                    }
                                }]
                            });

                            URL = "/Equipment/UpdateE/?id=" + row.EID;

                        } else {
                            $.messager.defaults = { ok: "确定", cancel: "取消" };
                            $.messager.alert('提示', '请选择编辑的数据行')
                        }
                    }
                }]

            });
            $("#btnOK").click(function () {
                $("#ff").form('submit', {
                    url: URL,
                    onSubmit: function () {
                        return $(this).form('validate');
                    },
                    success: function (result) {
                        //var result = eval('(' + result + ')');
                        if (result == "success") {
                            $("#dlg").dialog('close');
                            $.messager.defaults = { ok: "确定", cancel: "取消" };
                            $.messager.alert('提示', '编辑成功！');
                            $("#dg").datagrid('reload');
                        } else {
                            $.messager.show({
                                title: Error,
                                msg: result.msg
                            });
                        }
                    }
                });
            });
            $('#EMFD').datebox({
                width: 90,
                required: true
            });
            //结束时间
            $('#EBD').datebox({
                width: 90,
                required: true
            });
            //设备类型下拉框
            $('#EType1').combobox({
                width: 90,
                url: '/Equipment/ComTypeList',
                valueField: 'TypeID',
                textField: 'TypeName',
                value: '常用类'
            });
            $('#EDType').combobox({
                width: 90,
                url: '/Equipment/ComTypeList',
                valueField: 'TypeID',
                textField: 'TypeName',
            });
            //查询事件
            //$("#btnSearch").click(function () {
            //    $('#dg').datagrid('load', {
            //        EName: $('#EName').val(),
            //        ETName: $('#EType').combobox('getText'),
            //    });
            //});
            $("#btnSearch").click(function () {
                var EType1 = $("#EType1").combobox('getText');
                var time = $("#EMFD").datebox('getValue');
                
                $("#dg").datagrid('load', {
                    'EName': $("#EName").val(),
                    'EType1': EType1,
                    'EMFD': time
                });
            });
            $("#btn1").click(function () {
                $("#imgc").attr
                $("#frm").form('submit', {
