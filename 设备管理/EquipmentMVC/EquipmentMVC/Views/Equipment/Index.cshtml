                    <td>
                        <input id="EFactory" type="text" name="EFactory" />
                    </td>
                </tr>
                <tr>
                    <td class="title">购买时间：</td>
                    <td>
                        <input id="EBD" name="EBD" type="text" class="easyui-datebox" />
                    </td>
                </tr>
